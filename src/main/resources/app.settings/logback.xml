<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true"> <!-- true : if you want to debug logback startup settings -->
    <property resource="app.properties"/>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} [%thread%X{threadId}] %highlight(%-5level) %logger{35}:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="${GLOBAL.log.name}"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.file.global}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${GLOBAL.log.file.name}</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>${GLOBAL.log.max.index}</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${GLOBAL.log.max.size}</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <Pattern>${GLOBAL.log.style}</Pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>

    <appender name="${ERROR.log.name}"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.file.global}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${ERROR.log.file.name}</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>${ERROR.log.max.index}</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${ERROR.log.max.size}</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <Pattern>${ERROR.log.style}</Pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>


    <!-- Error Logger -->
    <root level="ERROR">
        <appender-ref ref="${ERROR.log.name}"/>
        <appender-ref ref="${GLOBAL.log.name}"/>
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Logback Logger to WARN Level -->
    <logger name="ch.qos.logback" level="WARN">
        <appender-ref ref="${GLOBAL.log.name}"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Spring Logger to WARN Level -->
    <logger name="org.springframework" level="WARN">
        <appender-ref ref="${GLOBAL.log.name}"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- APPLICATION LOGGERS -->
    <logger name="com.giophub" level="${log.level.global}" additivity="false">
        <appender-ref ref="${GLOBAL.log.name}"/>
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
